{
	"name": "server",
	"version": "1.0.0",
	"main": "app.js",
	"author": "Twiggeh",
	"type": "module",
	"license": "MIT",
	"scripts": {
		"debug": "node ./scripts/debug.mjs",
		"start": "./scripts/build.sh",
		"gql:codegen": "graphql-codegen --config gqlgen.yml"
	},
	"eslintConfig": {
		"settings": {},
		"parser": "babel-eslint",
		"env": {
			"browser": false,
			"es6": true,
			"node": true
		},
		"extends": [
			"eslint:recommended"
		],
		"globals": {
			"Atomics": "readonly",
			"SharedArrayBuffer": "readonly"
		},
		"parserOptions": {
			"ecmaVersion": 2018,
			"sourceType": "module"
		},
		"plugins": [
			"security"
		],
		"rules": {
			"indent": [
				"error",
				"tab",
				{
					"SwitchCase": 1
				}
			],
			"linebreak-style": [
				"error",
				"unix"
			],
			"quotes": [
				"error",
				"single"
			],
			"semi": [
				"error",
				"always"
			],
			"flatTernaryExpressions": 0,
			"no-unused-vars": [
				1,
				{
					"vars": "all",
					"args": "after-used",
					"ignoreRestSiblings": false
				}
			]
		},
		"ignorePatterns": [
			"node_modules/",
			"dist/"
		]
	},
	"dependencies": {
		"@types/bcrypt": "^3.0.0",
		"@types/connect-mongodb-session": "^2.4.0",
		"@types/express-session": "^1.17.3",
		"apollo-server-express": "^2.19.0",
		"bcrypt": "^5.0.0",
		"connect-mongodb-session": "^2.4.1",
		"cors": "^2.8.5",
		"dotenv": "^8.2.0",
		"express": "^4.17.1",
		"express-session": "^1.17.1",
		"express-validator": "^6.6.1",
		"grant": "^5.4.9",
		"graphql": "^15.4.0",
		"graphql-upload": "^11.0.0",
		"mongoose": "^5.11.10",
		"morgan": "^1.10.0",
		"node-fetch": "^2.6.1"
	},
	"devDependencies": {
		"@graphql-codegen/cli": "1.20.0",
		"@graphql-codegen/typescript": "1.19.0",
		"@graphql-codegen/typescript-mongodb": "1.17.9",
		"@graphql-codegen/typescript-resolvers": "1.18.1",
		"@types/cors": "^2.8.8",
		"@types/express": "^4.17.9",
		"@types/mongoose": "^5.10.3",
		"@types/morgan": "^1.9.2",
		"@types/node": "^14.14.14",
		"babel-eslint": "^10.1.0",
		"eslint": "^7.14.0",
		"eslint-plugin-security": "^1.4.0",
		"ts-node-dev": "^1.0.0",
		"typescript": "^4.1.3"
	}
}
