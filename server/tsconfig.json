{
	"compilerOptions": {
		"allowJs": true,
		"target": "esnext",
		"lib": ["ESNext"],
		"moduleResolution": "Node",
		"baseUrl": "./",
		"module": "ESNext",
		"noImplicitAny": true,
		"sourceMap": true,
		"allowSyntheticDefaultImports": true,
		"outDir": "dist",
		"typeRoots": ["src/@types"],
		"paths": {
			"*": ["node_modules/*", "src/@types/*"]
		}
	},
	"compileOnSave": false,
	"include": ["src/**/*"]
}
