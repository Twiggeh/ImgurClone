{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Launch Chrome",
			"sourceMaps": true,
			"outFiles": ["./client/public/js/*.js", "!**/node_modules/**"],
			"request": "launch",
			"type": "pwa-chrome",
			"url": "http://localhost:5000",
			"webRoot": "${workspaceFolder}/client",
			"postDebugTask": "Linux kill webpack"
		},
		{
			"name": "Development Backend",
			"cwd": "${workspaceFolder}/server",
			"restart": true,
			"request": "launch",
			"type": "pwa-node",
			"runtimeExecutable": "nodemon",
			"runtimeArgs": ["--inspect-brk", "./dist/src/app.js"]
		},
		{
			"command": "yarn debug",
			"cwd": "${workspaceFolder}/client",
			"name": "TSC Watcher Client",
			"request": "launch",
			"type": "node-terminal"
		},
		{
			"command": "yarn debug",
			"cwd": "${workspaceFolder}/server",
			"name": "TSC Compiler Server",
			"request": "launch",
			"type": "node-terminal"
		}
	],
	"compounds": [
		{
			"name": "start debug session",
			"configurations": [
				"Launch Chrome",
				"TSC Watcher Client",
				"TSC Compiler Server",
				"Development Backend"
			],
			"preLaunchTask": "start Webpack",
			"stopAll": true
		}
	]
}
