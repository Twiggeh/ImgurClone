{
	"compilerOptions": {
		"target": "esnext",
		"lib": ["dom", "dom.iterable", "esnext"],
		"types": ["node"],
		"allowJs": true,
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"sourceMap": true,
		"jsx": "react",
		"strictNullChecks": true,
		"noEmit": false,
		"typeRoots": ["src/@types"],
		"baseUrl": "/",
		"paths": {
			"*": ["src/@types/*.d.ts"]
		},
		"removeComments": true
	},
	"include": ["./**/*.ts"],
	"exclude": ["node_modules", "dist", "src/index.js", "scripts"]
}
