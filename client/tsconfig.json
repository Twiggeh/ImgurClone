{
	"compilerOptions": {
		"target": "es6",
		"allowSyntheticDefaultImports": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"typeRoots": ["src/@types"],
		"jsx": "react",
		"strict": true,
		"strictNullChecks": true,
		"baseUrl": "./",
		"noEmit": true,
		"paths": {
			"*": ["src/@types/*"]
		}
	},
	"compileOnSave": false,
	"include": ["src/**/*"]
}
