{
	"compilerOptions": {
		"target": "es2018",
		"allowSyntheticDefaultImports": true,
		"allowJs": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"typeRoots": ["src/@types"],
		"jsx": "react",
		"strict": true,
		"strictNullChecks": true,
		"baseUrl": "./",
		"paths": {
			"*": ["src/@types/*"]
		}
	},
	"compileOnSave": false,
	"include": ["src/**/*"]
}
